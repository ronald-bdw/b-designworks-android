<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.b_designworks.android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        >

        <activity android:name=".InitialScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".login.WelcomeScreen"/>
        <activity android:name=".login.SelectProviderScreen"/>
        <activity android:name=".login.EnterPhoneScreen"/>
        <activity android:name=".chat.ChatScreen"/>
        <activity android:name=".login.VerifyScreen"/>
        <activity android:name=".trial.TrialScreen"/>
        <activity android:name=".profile.ProfileScreen"/>
        <activity android:name=".settings.SettingsScreen"/>
        <activity android:name=".settings.PushNotificationsSettingsScreen"/>
        <activity android:name=".sync.SyncScreen"/>
        <activity android:name=".login.RegistrationScreen"/>
        <activity android:name=".profile.EditProfileScreen"/>
        <activity android:name=".AboutUsScreen"/>
        <activity android:name=".sync.GoogleFitScreen"/>

        <activity android:name=".sync.FitbitScreen"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:host="pearup.com" android:scheme="pearup" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".login.SmsListener"
            android:permission="android.permission.BROADCAST_SMS"
            >
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED"/>
            </intent-filter>
        </receiver>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="a58319df29eb3929f0ed864166f3c42deb476e66"
            />

    </application>
</manifest>
