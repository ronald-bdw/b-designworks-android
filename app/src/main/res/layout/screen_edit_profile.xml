<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@android:color/white"
    >

    <include layout="@layout/layout_toolbar"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="1dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/app_accent"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/avatar_placeholder_settings"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            />

        <TextView
            android:id="@+id/current_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Vladimir Eremin"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal|bottom"
            android:textColor="#ECC933"
            android:layout_marginBottom="36dp"
            />

        <TextView
            android:id="@+id/current_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:textColor="@android:color/white"
            tools:text="example@email.com"
            android:layout_marginBottom="16dp"
            />

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="32dp"
        android:layout_marginTop="24dp"
        android:text="@string/edit_profile_first_name"
        android:textColor="@color/app_accent"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        android:inputType="text"
        android:background="@drawable/bg_edit_profile"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="32dp"
        android:layout_marginTop="8dp"
        android:text="@string/edit_profile_last_name"
        android:textColor="@color/app_accent"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        android:inputType="text"
        android:background="@drawable/bg_edit_profile"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="32dp"
        android:layout_marginTop="8dp"
        android:text="@string/edit_profile_email"
        android:textColor="@color/app_accent"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/bg_edit_profile"
        />

</LinearLayout>